<% include partials/header %>

<div class="wrap">
  <div class="grid">
    <div class="grid__cell grid__cell--20">
      <section class="section section--left">
        <h2 class="section__title">Seasons</h2>
        <ul class="nav">
          <% seasons.forEach(season => { %>
            <li class="nav__item">
              <a href="/<%= season.path %>"><%= season.title %></a>
            </li>
          <% }) %>
        </ul>
      </section>
    </div>
    <div class="grid__cell grid__cell--80">
      <section class="section">
        <h2 class="section__title">Episodes</h2>
        <div class="grid">
          <% pagination.files.forEach(episode => { %>
            <div class="grid__cell grid__cell--50">
              <% include partials/episode_preview %>
            </div>
          <% }) %>
        </div>
        <div class="pagination">
          <% if (pagination.previous) { %>
            <a href="/<%= pagination.previous.path %>/" class="pagination__prev">Previous page</a>
          <% } %>

          <% if (pagination.next) { %>
            <a href="/<%= pagination.next.path %>/" class="pagination__next">Next page</a>
          <% } %>
        </div>
      </section>
    </div>
  </div>
</div>

<% include partials/footer %>
